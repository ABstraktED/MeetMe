<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@drawable/event_background"
    android:padding="2dp" >

    <ImageView
        android:id="@+id/event_row_image_iv"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:contentDescription="@string/ContentDescription"
        android:src="@drawable/mars" />

    <TextView
        android:id="@+id/event_row_title_tv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/event_row_image_iv"
        android:background="#aa666666"
        android:ellipsize="marquee"
        android:gravity="left"
        android:lines="2"
        android:text=""
        android:textColor="#ececec"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/event_row_image_iv"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/event_row_organizators_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|left"
            android:layout_weight="1"
            android:ellipsize="end"
            android:lines="1"
            android:text=""
            android:textColor="#666666" />

        <TextView
            android:id="@+id/event_row_date_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|right"
            android:layout_weight="1"
            android:lines="1"
            android:text=""
            android:textColor="#666666" />
    </LinearLayout>

</RelativeLayout>