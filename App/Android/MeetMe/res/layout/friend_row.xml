<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@drawable/event_background"
    android:padding="2dp" >

    <ImageView
        android:id="@+id/friend_row_image"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:contentDescription="@string/ContentDescription"
        android:src="@drawable/earth" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/friend_row_image"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/friend_row_FirstName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="marquee"
            android:gravity="left"
            android:lines="1"
            android:text=""
            android:textColor="#666666"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/friend_row_lastName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="marquee"
            android:gravity="left"
            android:lines="1"
            android:text=""
            android:textColor="#666666"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/friend_row_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|left"
            android:layout_weight="1"
            android:ellipsize="end"
            android:lines="1"
            android:text=""
            android:textColor="#666666" />
    </LinearLayout>

</RelativeLayout>